extends layout
block beforeBody
  - bodyClasses.push('resume')

extends layout

block content
   section
      h1 Resume 
         a(href="/assets/resume.pdf") (download a copy)

      section
         - var experiences = _.chain(contents['resume']._.pages).sortBy(function(item){return item.metadata.order}).value()
         each experience in experiences
            - var title = experience.metadata.title
            - var time = experience.metadata.time
            - var description = experience.metadata.description
            if title == null
               - return
            else
               article
                  h1= title
                  h2= time
                  p= description
      section
         article
            h1 Web technologies
            p HTML5, CSS3, Sass, JavaScript, Jquery, React, Backbone, Angular, D3, Grunt, Wintersmith, Jade, Node.js, Git, SVN, .NET, PHP &amp; MySQL, AWS S3 and EC2